<?xml version="1.0" encoding="UTF-8"?>
<project name="module_laba_3" default="compile.module.laba_3">
  <dirname property="module.laba_3.basedir" file="${ant.file.module_laba_3}"/>
  
  <property name="module.jdk.home.laba_3" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.laba_3" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.laba_3" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.laba_3" value="-encoding UTF-8 -source 12 -target 12 ${compiler.args}"/>
  
  <property name="laba_3.output.dir" value="${module.laba_3.basedir}/out/production/laba_3"/>
  <property name="laba_3.testoutput.dir" value="${module.laba_3.basedir}/out/test/laba_3"/>
  
  <path id="laba_3.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="laba_3.module.production.classpath">
    <path refid="${module.jdk.classpath.laba_3}"/>
  </path>
  
  <path id="laba_3.runtime.production.module.classpath">
    <pathelement location="${laba_3.output.dir}"/>
  </path>
  
  <path id="laba_3.module.classpath">
    <path refid="${module.jdk.classpath.laba_3}"/>
    <pathelement location="${laba_3.output.dir}"/>
  </path>
  
  <path id="laba_3.runtime.module.classpath">
    <pathelement location="${laba_3.testoutput.dir}"/>
    <pathelement location="${laba_3.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.laba_3">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.laba_3">
    <patternset refid="excluded.from.module.laba_3"/>
  </patternset>
  
  <path id="laba_3.module.sourcepath">
    <dirset dir="${module.laba_3.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.laba_3" depends="compile.module.laba_3.production,compile.module.laba_3.tests" description="Compile module laba_3"/>
  
  <target name="compile.module.laba_3.production" depends="register.custom.compilers" description="Compile module laba_3; production classes">
    <mkdir dir="${laba_3.output.dir}"/>
    <javac2 destdir="${laba_3.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.laba_3}/javac">
      <compilerarg line="${compiler.args.laba_3}"/>
      <bootclasspath refid="laba_3.module.bootclasspath"/>
      <classpath refid="laba_3.module.production.classpath"/>
      <src refid="laba_3.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.laba_3"/>
    </javac2>
    
    <copy todir="${laba_3.output.dir}">
      <fileset dir="${module.laba_3.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.laba_3.tests" depends="register.custom.compilers,compile.module.laba_3.production" description="compile module laba_3; test classes" unless="skip.tests"/>
  
  <target name="clean.module.laba_3" description="cleanup module">
    <delete dir="${laba_3.output.dir}"/>
    <delete dir="${laba_3.testoutput.dir}"/>
  </target>
</project>